<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ResultTextStyle">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SpecificButtonStyle" parent="@style/ButtonStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>